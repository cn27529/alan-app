        <div class="container">
            <h2>
                <a href="https://cn27529.gitbooks.io/cycoholic-api/content/logs.html">
                    <%=title%>
                </a>
                <span id="cool">
                    <%=cool%>
                </span>
            </h2>
            <ul class="nav">
                <% for(var i=0; i< data.length; i++) { %>

                    <a style="margin-top: 10px;" target="blank" href="../logs/<%= data[i].name %>" class="btn btn-primary btn-lg active" role="button"
                        aria-pressed="true">
                        <%= data[i].name %>
                            <div>
                                <%= data[i].kb %>
                                    kb
                            </div>
                    </a>

                    <% } %>
            </ul>

        </div>
    </div>

</body>
<script>
    $(function () {
        //console.log(jQuery)
        var cool = '<%=cool%>';
        $('#cool').val(cool);

        var jqxhr = $.get("/cool", function (data) {
            //alert( "success" );
        })
        // .done(function(data) {
        //     //alert( "second success" );
        // })
        // .fail(function(data) {
        //     //alert( "error" );
        // })
        // .always(function(data) {
        //     //alert( "finished" );
        // });

        jqxhr.done(function (data) {
            //alert(data);
            var cools = data.data;
            setInterval(function () {
                var ii = parseInt(Math.random() * cools.length);
                $('#cool').html(cools[ii])
                //testAnim('fadeInDownBig');
            }, 2000);

        });

    })
</script>

</html>