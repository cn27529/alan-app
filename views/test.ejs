<%- contentFor('body')%>
<div id="app_test">
  <h1>
    {{ cool }}
  </h1>
  <h2>
    {{ title }}
  </h2>
  <div v-for="(item, index) in links">
    <h3>{{ item }}</h3>
  </div>
</div>

<%- contentFor('js')%>
<script>
  var app_test = new Vue({
    el: '#app_test',
    data: {
      cool: '<%=cool%>',
      title: '<%=title%>',
      loading: false,
      links: []
    },
    mounted: function() {
      var data = this.title.split('/');
      this.links = data.map(function(item, index, array) {
        if (item === '') return '/';
        else return item;
      });
    },
    created: function() {
      // `this` points to the vm instance
    },
    //el methods
    methods: {}
  });
</script>

