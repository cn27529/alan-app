@model CoreMVC01.Models.Customers

@{
    ViewData["Title"] = "Delete";
}

<h1>刪除</h1>

<h3></h3>
<div>
    <h4>客戶資料</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            公司名稱：
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cname)
        </dd>
        <dt class = "col-sm-2">
            電話：
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ctel)
        </dd>
        <dt class = "col-sm-2">
            傳真：
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cfax)
        </dd>
        <dt class = "col-sm-2">
            地址：
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ccity)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Cid" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
        <a asp-action="Index">回客戶列表</a>
    </form>
</div>
