@model CoreMVC01.Models.Customers

@{
    ViewData["Title"] = "Edit";
}

<h1>編輯</h1>

<h4>客戶資料</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cid" />
            <div class="form-group">
                <label class="control-label">公司名稱</label>
                <input asp-for="Cname" class="form-control" />
                <span asp-validation-for="Cname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">電話</label>
                <input asp-for="Ctel" class="form-control" />
                <span asp-validation-for="Ctel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">傳真</label>
                <input asp-for="Cfax" class="form-control" />
                <span asp-validation-for="Cfax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">地址</label>
                <input asp-for="Ccity" class="form-control" />
                <span asp-validation-for="Ccity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回客戶列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
